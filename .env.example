# Copy this file to .env and fill in real values.
# Never commit your real .env.

# ------------------------------
# Database (Prisma)
# ------------------------------
# Local docker-compose default (if you use the included Postgres service):
# DATABASE_URL="postgresql://welthiq:welthiq@localhost:5432/welthiq"
# DIRECT_URL="postgresql://welthiq:welthiq@localhost:5432/welthiq"

# Hosted DB example (Supabase/Neon/etc):
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DBNAME"

# ------------------------------
# Clerk (required)
# ------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_..."
CLERK_SECRET_KEY="sk_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# ------------------------------
# Gemini (required for receipt scan + insights)
# ------------------------------
GEMINI_API_KEY="..."

# ------------------------------
# Optional integrations
# ------------------------------
ARCJET_KEY="..."
RESEND_API_KEY="..."

# docker-compose Postgres (only used if you run the bundled db service)
POSTGRES_DB="welthiq"
POSTGRES_USER="welthiq"
POSTGRES_PASSWORD="welthiq"
